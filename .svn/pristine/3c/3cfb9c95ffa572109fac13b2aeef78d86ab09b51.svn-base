*{
  margin:0;
  padding:0;
}
ul,ol,li{
  list-style-type: none;
}
html,body,#app{
  width: 100%;
  height:100%;
  min-width:1200px;
  min-height:600px;
  color:#333;
  box-sizing: border-box;
  overflow: hidden;
}

.main{
  overflow: hidden;
  ::-webkit-scrollbar{
    width:8px;
  }
  ::-webkit-scrollbar-track{
    box-shadow: inset 0 0 6px rgba(0,0,0,.3);
    border-radius: 10px;
  }
  ::-webkit-scrollbar-thumb{
    border-radius: 10px;
    box-shadow: inset 0 0 6px rgba(0,0,0,.5);
  }
  .wrapper{
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: flex-start;
    width:100%;
    // height:100%;
    background-color: #fff;
    .content{
      width:100%;
      height:calc(100% - 60px);
      padding:20px;
      box-sizing: border-box;
      overflow: auto;


    }
  }
}
.btn{
  display: inline-block;
  height:30px;
  padding:0 10px;
  margin-right:10px;
  background-color: #fff;
  color: #333;
  font-size: 16px;
  border:1px solid #00998d;
  border-radius: 4px;
  line-height:30px;
  text-align:center;
  user-select:none;
}
.btn:hover{
  cursor: pointer;
  color: #fff;
  background-color: #00998d;
}
div.detail{
  width:100%;
  padding:5px 15px;
  box-sizing: border-box;
  nav{
    padding-bottom:5px;
    margin-top:10px;
    margin-bottom:15px;
    border-bottom:1px solid #00998d;
    span{
      font-size: 16px;
      padding:0 10px;
      padding-bottom:5px;
      border:1px solid #00998d;
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
    }
    span.active{
      background-color: #00998d;
      color: #fff;
    }
    span:hover{
      cursor:pointer;
      user-select: none;
    }
  }
}