              ]
            },
            {
              name:'编辑内容',
              isEditor:true,
              prop:'content',
              rules:[
                {
                  required:true,
                  message:'请编辑内容',
                  trigger:'blur'
                }
              ]
            }
          ],
          valid:{
            title:'',
            list:'',
            abstract:'',
            content:''
          }
        },
      ]
    };
  },
  computed:{
    formList(){
      return this.list.find(item=>{
        return item.type == this.$route.params.type
      })
    },
    navName(){
      let type = this.$route.params.type , name = ''
      switch(type){
        case 'news' : name = '发布新闻'
                    break;
        case 'notice' : name = '发布通知'
                    break;
        case 'company' : name = "发布企业校友"
                    break;
        case 'student' : name = '发布学生中心'
                    break;
      }
      return name
    },
    menuName(){
      let type = this.$route.params.type , name = ''
      switch(type){
        case 'news' : name = '新闻速递'
                    break;
        case 'notice' : name = '通知公告'
                    break;
        case 'company' : name = "企业校友"
                    break;
        case 'student' : name = '学生中心'
                    break;
      }
      return name      
    }
  },
  methods:{
    submit(){
      let url = '' , type = this.$route.params.type
      if(type == 'news' || type == 'company' || type=="student"){
        if(this.formList.valid.tid){
          url = 'News/update'
          this.formList.valid.id = this.formList.valid.tid
        }else{
          url = 'News/pubnews'
        }    
      }else if(type == 'notice'){
        if(this.formList.valid.nid){
          url = 'Notice/update'
          this.formList.valid.id = this.formList.valid.nid
        }else{
          url = 'Notice/pubnotice'
        }
      }
      this.$refs.myForm.validate(valid=>{
        if(valid){
            this.$http(url,this.formList.valid).then(res=>{
              let error = res.error == 0 ? 'success' : 'error'
              _g.toastMsg(error,res.msg)
              if(res.error == 0){
                setTimeout(()=>{
                  this.$refs.myForm.resetFields()
                  this.$router.go(-1)
                },1000)
              }
            })
        }
      })
    },
    fetchData(){   // 获取数据 -- 没有数据为发布 -- 有为编辑
      if(this.$route.params.data){
        this.formList.valid = this.$route.params.data
      }
    }
  },
  created(){
    this.$nextTick(()=>{
      var editor = new E('#editor')
      editor.customConfig.uploadImgServer = rootPath + 'Base/editorUpload'  //图片上传地址
      editor.customConfig.uploadFileName = 'file'  //图片上传类型
      editor.customConfig.customAlert = function(info){   // 自定义alert框
          _g.toastMsg('warning',info)
      }
      editor.customConfig.onchange = html => {  // 保存文本框内容
        this.formList.valid.content = html
      }
      editor.create()   // 初始化编辑器
      editor.txt.clear()  // 清除编辑器内容
      editor.txt.html(this.formList.valid.content)  // 编辑器赋值
    })
    this.fetchData()
  }
};
</script>

