                }
              ]
            },
            {
              name:'编辑内容',
              isEditor:true,
              prop:'content',
              rules:[
                {
                  required:true,
                  message:'请编辑文档内容'
                }
              ]
            }
          ],
          valid:{
            list:'',
            title:'',
            content:'',
            abstract:'',
          }
        },
        {
          type:'notice',
          info:[
            {
              name:'选择分类',
