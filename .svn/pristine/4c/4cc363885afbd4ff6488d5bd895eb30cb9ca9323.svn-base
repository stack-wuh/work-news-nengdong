                {
                  required:true,
                  message:'请编辑内容摘要',
                  trigger:'blur'
                }
              ]
            },
            {
              name:'编辑内容',
              isEditor:true,
              prop:'content',
              rules:[
                {
                  required:true,
                  message:'请编辑内容',
