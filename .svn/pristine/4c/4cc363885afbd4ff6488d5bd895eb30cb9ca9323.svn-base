          }
        },
        {
          type:'company',
          info:[
            {
              name:'选择分类',
              isSelect:true,
              selectList:['行业动态','校友名录','企业文化'],
              prop:'list',
              rules:[
                {
                  required:true,
                  message:'请选择类型',
                  trigger:'change'
                }
              ]
            },
            {
              name:'主标题',
